<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jackie.sample.video_player.VideoPlayerActivity">

    <LinearLayout
        android:id="@+id/video_player_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <com.jackie.sample.video_player.view.VideoPlayer
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="小窗口播放"
            android:onClick="enterTinyWindow"/>

        <Button
            android:layout_width="match_parent"
            android:text="视频列表"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:onClick="showVideoList"/>
    </LinearLayout>

</LinearLayout>