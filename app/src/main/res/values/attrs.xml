<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="icon" format="reference" />
    <attr name="text" format = "string" />
    <attr name="text_size" format="dimension" />
    <attr name="text_color" format="color" />
    <attr name="radius" format="dimension" />
    <attr name="border_color" format="color|reference" />
    <attr name="textSize" format="dimension" />

    <declare-styleable name="ChangeColorIconView">
        <attr name="icon" />
        <attr name="text_color" />
        <attr name="text" />
        <attr name="text_size" />
    </declare-styleable>

    <declare-styleable name="ColorTrackView">
        <attr name="text" />
        <attr name="text_size" />
        <attr name="text_origin_color" format="color|reference" />
        <attr name="text_change_color" format="color|reference" />
        <attr name="progress" format="float" />
        <attr name="direction">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ViewPagerTriangleIndicator">
        <attr name="indicator_item_count" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ScratchView">
        <attr name="text" />
        <attr name="text_size" />
        <attr name="text_color" />
    </declare-styleable>

    <declare-styleable name="ArcMenu">
        <attr name="position" format="enum">
            <enum name="left_top" value="0" />
            <enum name="left_bottom" value="1" />
            <enum name="right_top" value="2" />
            <enum name="right_bottom" value="3" />
        </attr>
        <attr name="radius" />
    </declare-styleable>

    <declare-styleable name="SlidingMenu">
        <attr name="padding_right" format="dimension" />
    </declare-styleable>

    <declare-styleable name="HorizontalProgressBar">
        <attr name="unreachable_color" format="color" />
        <attr name="unreachable_height" format="dimension" />
        <attr name="reachable_color" format="color" />
        <attr name="reachable_height" format="dimension" />
        <attr name="text_color" />
        <attr name="text_size" />
        <attr name="text_offset" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="radius" />
    </declare-styleable>

    <declare-styleable name="TimelineLayout">
        <!--时间轴左偏移值-->
        <attr name="line_margin_left" format="dimension" />
        <!--时间轴上偏移值-->
        <attr name="line_margin_top" format="dimension" />
        <!--线宽-->
        <attr name="line_stroke_width" format="dimension" />
        <!--线的颜色-->
        <attr name="line_color" format="color" />
        <!--点的大小-->
        <attr name="point_size" format="dimension" />
        <!--点的颜色-->
        <attr name="point_color" format="color" />
        <!--图标-->
        <attr name="timeline_icon_src" format="reference" />
    </declare-styleable>

    <declare-styleable name="ClipImageLayout">
        <!-- 水平间距 -->
        <attr name="horizontal_padding" format="dimension" />
        <attr name="image_drawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="JCameraView">
        <attr name="icon_size" format="dimension" />
        <attr name="icon_margin" format="dimension" />
        <attr name="camera_icon_src" format="reference" />
        <attr name="duration_max" format="integer" />
    </declare-styleable>

    <declare-styleable name="ImageShowPickerView">
        <!-- 添加图片 -->
        <attr name="add_picture_resource_id" format="reference" />
        <!-- 删除图片 -->
        <attr name="delete_picture_resource_id" format="reference" />
        <!-- 是否显示删除按钮-->
        <attr name="is_show_delete_picture" format="boolean" />
        <!-- 是否展示动画-->
        <attr name="is_show_animation" format="boolean" />
        <!-- 单行显示数量-->
        <attr name="show_num_one_line" format="integer" />
        <!-- 最大数量 -->
        <attr name="max_num" format="integer" />
    </declare-styleable>

    <declare-styleable name="LoopCompletenessListView">
        <attr name="loop_item_count" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="VolumeControlBar">
        <attr name="first_color" format="color" />
        <attr name="second_color" format="color" />
        <attr name="circle_width" format="dimension" />
        <attr name="dot_count" format="integer" />
        <attr name="split_size" format="integer" />
        <attr name="center_image" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleRangeView">
        <attr name="range_color_array" format="reference" />
        <attr name="range_text_array" format="reference" />
        <attr name="range_value_array" format="reference" />

        <attr name="border_color" />
        <attr name="cursor_color" format="color|reference" />
        <attr name="extra_text_color" format="color|reference" />

        <attr name="range_text_size" format="dimension|reference" />
        <attr name="extra_text_size" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="VirtualKeyboardView">
        <attr name="type" format="integer" />
    </declare-styleable>

    <declare-styleable name="RangeBar">
        <attr name="text_style" format="enum">
            <enum name="NORMAL" value="0" />
            <enum name="TEXT" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="StepView">
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="section_line_height" format="dimension"/>

        <attr name="step_style" format="enum">
            <enum name="common" value="0" />
            <enum name="red" value="1" />
            <enum name="ave" value="2" />
        </attr>

        <attr name="total_step" format="integer" />
        <attr name="current_step" format="integer" />
        <attr name="unComplete_radius" format="dimension" />
        <attr name="unComplete_color" format="color" />
    </declare-styleable>

    <declare-styleable name="FallingView">
        <attr name="flake_src" format="reference" />
        <attr name="flake_scale" format="integer" />
        <attr name="flake_density" format="integer" />
        <attr name="falling_delay" format="integer" />
    </declare-styleable>

    <declare-styleable name="PaletteImageView">
        <attr name="palette_radius" format="dimension" />
        <attr name="palette_src" format="reference" />
        <attr name="palette_padding" format="dimension" />
        <attr name="palette_offsetX" format="dimension" />
        <attr name="palette_offsetY" format="dimension" />
        <attr name="palette_shadow_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SwipeFlingAdapterView">
        <attr name="y_offset_step" format="dimension" />
        <attr name="rotation_degrees" format="float" />
        <attr name="min_adapter_stack" format="integer" />
        <attr name="max_visible" format="integer" />
    </declare-styleable>

    <declare-styleable name="CodeEditText">
        <attr name="line_width" format="dimension" />
        <attr name="line_height" format="dimension" />
        <attr name="code_length" format="dimension" />
        <attr name="code_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="StateButton">
        <!--text color-->
        <attr name="normalTextColor" format="color|reference" />
        <attr name="pressedTextColor" format="color|reference" />
        <attr name="unableTextColor" format="color|reference" />
        <!--stroke width and color, dash width, dash gap-->
        <attr name="strokeDashWidth" format="dimension|reference" />
        <attr name="strokeDashGap" format="dimension|reference" />
        <attr name="normalStrokeWidth" format="dimension|reference" />
        <attr name="pressedStrokeWidth" format="dimension|reference" />
        <attr name="unableStrokeWidth" format="dimension|reference" />
        <attr name="normalStrokeColor" format="color|reference" />
        <attr name="pressedStrokeColor" format="color|reference" />
        <attr name="unableStrokeColor" format="color|reference" />

        <!--background color-->
        <attr name="normalBackgroundColor" format="color|reference" />
        <attr name="pressedBackgroundColor" format="color|reference" />
        <attr name="unableBackgroundColor" format="color|reference" />

        <!--background radius-->
        <attr name="radiusButton" format="dimension|reference" />
        <attr name="round" format="boolean|reference" />

        <!--animation duration-->
        <attr name="animationDuration" format="integer|reference" />
    </declare-styleable>

    <!-- CircleImageView 应用时去掉白边需要用border_width属性 -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" />
    </declare-styleable>

    <!-- 文本指示器 -->
    <declare-styleable name="TextPageIndicator">
        <attr name="indicatorType" format="integer" />
    </declare-styleable>

    <!-- 图片上传 -->
    <declare-styleable name="CustomUploadLayout">
        <attr name="numColumns" format="integer" />
        <attr name="paddingLeft" format="dimension" />
        <attr name="paddingRight" format="dimension" />
        <attr name="horizontalSpacing" format="dimension" />
        <attr name="verticalSpacing" format="dimension" />
        <attr name="dialogType" format="enum" >
            <enum name="withTaskPhoto" value="0" />
            <enum name="onlyTakePhoto" value="1" />
        </attr>
        <attr name="maxCount" format="integer" />
        <attr name="showMainView" format="boolean" />
        <attr name="mainViewText" format="reference|string" />
    </declare-styleable>

    <!-- 可折叠的TextView -->
    <declare-styleable name="FoldTextView">
        <attr name="showMaxLine" format="integer" />
        <attr name="tipGravity" format="integer" />
        <attr name="tipColor" format="reference|color" />
        <attr name="tipClickable" format="boolean" />
        <attr name="foldText" format="string" />
        <attr name="expandText" format="string" />
        <attr name="showTipAfterExpand" format="boolean" />
        <attr name="isSetParentClick" format="boolean"/>
    </declare-styleable>

    <!-- ToggleButton -->
    <declare-styleable name="ToggleButton">
        <attr format="dimension" name="tbBorderWidth"/>
        <attr format="reference|color" name="tbOffBorderColor"/>
        <attr format="reference|color" name="tbOffColor"/>
        <attr format="reference|color" name="tbOnColor"/>
        <attr format="reference|color" name="tbSpotColor"/>
        <attr format="reference|boolean" name="tbAnimate"/>
        <attr format="reference|boolean" name="tbAsDefaultOn"/>
        <attr name="toggleEnable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="AnimTextView">
        <attr name="textColor" format="color" />
        <attr name="textSize" />
        <attr name="duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="CodeView">
        <attr name="length" format="integer" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="dividerColor" format="color" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="code" format="string" />
        <attr name="codeColor" format="color" />
        <attr name="pointRadius" format="dimension" />
        <attr name="textSize" />
        <attr name="showType" format="enum">
            <enum name="word" value="1" />
            <enum name="password" value="2" />
        </attr>
    </declare-styleable>
</resources>