<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorTrackView">
        <attr name="track_text" format="string"/>
        <attr name="track_text_size" format="dimension"/>
        <attr name="text_origin_color" format="color|reference" />
        <attr name="text_change_color" format="color|reference" />
        <attr name="progress" format="float" />
        <attr name="direction">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
    
    <declare-styleable name="ChangeColorIconView">
        <attr name="change_icon" format="reference"/>
        <attr name="change_color" format="color"/>
        <attr name="change_text" format="string"/>
        <attr name="change_text_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="indicator_item_count" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ScratchView">
        <attr name="scratch_text" format="string"/>
        <attr name="scratch_text_size" format="dimension"/>
        <attr name="scratch_text_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ArcMenu">
        <attr name="position" format="enum">
            <enum name="left_top" value="0"/>
            <enum name="left_bottom" value="1"/>
            <enum name="right_top" value="2"/>
            <enum name="right_bottom" value="3"/>
        </attr>
        <attr name="radius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SlidingMenu">
        <attr name="padding_right" format="dimension" />
    </declare-styleable>

    <declare-styleable name="HorizontalProgressBar">
        <attr name="progress_unreachable_color" format="color"/>
        <attr name="progress_unreachable_height" format="dimension"/>
        <attr name="progress_reachable_color" format="color"/>
        <attr name="progress_reachable_height" format="dimension"/>
        <attr name="progress_text_color" format="color"/>
        <attr name="progress_text_size" format="dimension"/>
        <attr name="progress_text_offset" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="progress_radius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TimelineLayout">
        <!--时间轴左偏移值-->
        <attr name="line_margin_left" format="dimension"/>
        <!--时间轴上偏移值-->
        <attr name="line_margin_top" format="dimension"/>
        <!--线宽-->
        <attr name="line_stroke_width" format="dimension"/>
        <!--线的颜色-->
        <attr name="line_color" format="color"/>
        <!--点的大小-->
        <attr name="point_size" format="dimension"/>
        <!--点的颜色-->
        <attr name="point_color" format="color"/>
        <!--图标-->
        <attr name="timeline_icon_src" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ClipImageLayout">
        <!-- 水平间距 -->
        <attr name="horizontal_padding" format="dimension"/>
        <attr name= "image_drawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="JCameraView">
        <attr name="icon_size" format="dimension"/>
        <attr name="icon_margin" format="dimension"/>
        <attr name="camera_icon_src" format="reference"/>
        <attr name="duration_max" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ImageShowPickerView">
        <!-- 单张图片大小（宽高一样） -->
        <attr name="picture_size" format="dimension" />
        <!-- 添加图片 -->
        <attr name="add_picture_resource_id" format="reference" />
        <!-- 删除图片 -->
        <attr name="delete_picture_resource_id" format="reference" />
        <!-- 是否显示删除按钮-->
        <attr name="is_show_delete_picture" format="boolean" />
        <!-- 是否展示动画-->
        <attr name="is_show_animation" format="boolean" />
        <!-- 单行显示数量-->
        <attr name="show_num_one_line" format="integer" />
        <!-- 最大数量 -->
        <attr name="max_num" format="integer" />
    </declare-styleable>

    <declare-styleable name="LoopCompletenessListView">
        <attr name="loop_item_count" format="integer"/>
    </declare-styleable>
    
    <declare-styleable name="VolumeControlBar">
        <attr name="first_color" format="color"/>
        <attr name="second_color" format="color"/>
        <attr name="circle_width" format="dimension"/>
        <attr name="dot_count" format="integer"/>
        <attr name="split_size" format="integer"/>
        <attr name="center_image" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CircleRangeView">
        <attr name="rangeColorArray" format="reference"/>
        <attr name="rangeTextArray" format="reference"/>
        <attr name="rangeValueArray" format="reference"/>

        <attr name="borderColor" format="color|reference"/>
        <attr name="cursorColor" format="color|reference"/>
        <attr name="extraTextColor" format="color|reference"/>

        <attr name="rangeTextSize" format="dimension|reference"/>
        <attr name="extraTextSize" format="dimension|reference"/>
    </declare-styleable>
</resources>