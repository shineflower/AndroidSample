<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Gmail主题颜色 -->
    <style name="AppTheme.NoActionBar.Gmail" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gmail_colorPrimary</item>
        <item name="colorPrimaryDark">@color/gmail_colorPrimaryDark</item>
        <item name="colorAccent">@color/gmail_colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 其实是为了能够让ActionMode能够覆盖我们的Toolbar，否则会出现ActionMode将Toolbar顶下去的样子(重复出现)-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/bg_action_mode</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AudioDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>  <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮在Activity上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 是否半透明 -->
        <item name="android:backgroundDimEnabled">false</item> <!-- 背景是否模糊 -->
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="DataSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
    </style>

    <!-- Navigation Header -->
    <style name="NavPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/nav_page</item>
    </style>

    <style name="MMButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/mm_btn_text</item>
        <item name="android:background">@null</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="MMLineButton" parent="@style/MMButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mm_style_two_btn_text</item>
    </style>

    <style name="MMLineActionButton" parent="@style/MMLineButton">
        <item name="android:background">@drawable/selector_style_one</item>
        <item name="android:textColor">@color/mm_style_one_btn_text</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!-- 普通按钮样式 -->
    <style name="CommonButtonNormal" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:background">@drawable/btn_normal_shadow_bg</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- 不可点击按钮样式 -->
    <style name="CommonButtonNoClick" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:background">@drawable/shape_button_no_click_bg</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AnimationDown" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_scale_down_in</item>
        <item name="android:windowExitAnimation">@anim/push_scale_down_out</item>
    </style>

    <style name="AnimationRight" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_scale_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_scale_left_out</item>
    </style>

    <style name="AnimationLeft" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_scale_right_in</item>
        <item name="android:windowExitAnimation">@anim/push_scale_right_out</item>
    </style>

    <style name="AnimationUp" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_translate_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_translate_up_out</item>
    </style>

    <!-- 地址选择器弹窗 -->
    <style name="Theme.Light.NoTitle.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="Animation.Bottom.Rising" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>



    <!-- 自定义滚轮选择器 -->
    <style name="Theme.Light.NoTitle.NoShadow.Dialog" parent="Theme.Light.NoTitle.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 按钮样式 -->
    <style name="CommonButtonBt1" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/common_btn2_solid_selector</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize" >18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
    </style>

    <!-- 仿美团城市定位 -->
    <style name="CustomCityPickerTheme" parent="DefaultCityPickerTheme">
        <item name="cpCancelTextColor">@android:color/holo_blue_dark</item>
        <item name="cpSearchCursorDrawable">@android:color/holo_blue_dark</item>
        <item name="cpIndexBarNormalTextColor">@android:color/holo_blue_dark</item>
        <item name="cpIndexBarSelectedTextColor">@android:color/holo_purple</item>
        <item name="cpOverlayBackground">@android:color/holo_blue_dark</item>
    </style>

    <!-- 仿微信密码输入框 -->
    <style name="Keyboard">
        <item name="android:textSize">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_keyboard_background</item>
        <item name="android:textColor">#353535</item>
    </style>

</resources>
